@using Parcels.Models;
@using System;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Parcels Application!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    
  <div class="container">
    <h1>Here is a List of Parcels you have</h1>
    <ul>
      @if(Model.Count > 0)
          {
              @foreach (Parcel myParcel in Model)
            {
              <b></b>
              
                <a href="/parcels/@myParcel.ParcelId"><li><b>@myParcel.ParcelsName</b></li></a>
        
            } 
        
          }
          else
          {
            <li>The List of parcels is empty</li>
          }
     
    

</ul>
    <p>What would you like to do next:</p>
    <a href="parcels/new" class="btn btn-dark">Add Parcel</a>
    <a href="/" class="btn btn-dark">Home</a>
    <br>
    <br>

    <form action="parcels/delete" method="get">
      <button class="btn btn-danger" type="submit">Clear All </button>
    </form>
  </div>
  </body>
</html>