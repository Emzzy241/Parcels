@using Parcels.Models;
@using System;

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Parcels Application!</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
  <div class="container">
    <h2>Enter the details of the Parcel you want to add</h2>
    <br>
    <br>
            <form action="/parcels" method="post">

                <label for="newParcelName">Add your Parcel's name:</label>
                <input class="form-control" id="newParcelName" name="newParcelName" type="text" placeholder="e.g: A Box of headphone" required>
                <br>
                
                <label for="newParcelDimensions">Add your parcel's Dimensions in centimetres(cm):</label>
                <input class="form-control" id="newParcelDimensions" name="newParcelDimensions" type="text" placeholder="e.g: In this format: length * width/breadth * height. E.g: 10 * 20 * 30" required>
                <br>
                
                <label for="newParcelsWeight">Add your parcel's Weight in Kilogrammes:</label>
                <input class="form-control" id="newParcelsWeight" name="newParcelsWeight" type="text" placeholder="e.g: 50" required>
                <br>
                
                
        
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
  </div>
    
  </body>
</html>